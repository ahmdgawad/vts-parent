{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "zookeeper",
      "image": "wurstmeister/zookeeper:3.4.6",
      "essential": false,
      "portMappings": [
        {
          "hostPort": 2181,
          "containerPort": 2181
        }
      ],
      "memory": 128
    },
    {
      "name": "kafka",
      "image": "wurstmeister/kafka:2.12-2.1.0",
      "essential": false,
      "portMappings": [
        {
          "hostPort": 9092,
          "containerPort": 9092
        }
      ]
    },
    {
      "name": "vts-configuration-server",
      "image": "ahmedgawad2/vts-configuration-server",
      "essential": false,
      "portMappings": [
        {
          "hostPort": 5055,
          "containerPort": 5055
        }
      ]
    },
    {
      "name": "vts-eureka-server",
      "image": "ahmedgawad2/vts-eureka-server",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 8761,
          "containerPort": 8761
        }
      ],
      "links": ["vts-configuration-server"]
    },
    {
      "name": "vts-api-gateway",
      "image": "ahmedgawad2/vts-api-gateway",
      "essential": false,
      "portMappings": [
        {
          "hostPort": 5555,
          "containerPort": 5555
        }
      ],
      "links": ["vts-configuration-server", "vts-eureka-server"]
    },
    {
      "name": "vts-customer-service",
      "image": "ahmedgawad2/vts-customer-service",
      "essential": false,
      "portMappings": [
        {
          "hostPort": 9090,
          "containerPort": 9090
        }
      ],
      "links": ["vts-configuration-server", "vts-eureka-server"]
    },
    {
      "name": "vts-vehicle-service",
      "image": "ahmedgawad2/vts-vehicle-service",
      "essential": false,
      "portMappings": [
        {
          "hostPort": 9091,
          "containerPort": 9091
        }
      ],
      "links": ["vts-configuration-server", "vts-eureka-server"]
    },
    {
      "name": "vts-tracking-ui",
      "image": "ahmedgawad2/vts-tracking-ui",
      "essential": false,
      "portMappings": [
        {
          "hostPort": 9301,
          "containerPort": 9301
        }
      ],
      "links": ["vts-configuration-server", "vts-eureka-server"]
    }
  ]
}
